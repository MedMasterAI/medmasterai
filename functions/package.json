{
  "name": "functions",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && node --loader ts-node/esm --experimental-specifier-resolution=node --loader tsconfig-paths/register lib/index.js",
    "shell": "npm run build && firebase functions:shell --debug-nodejs --inspect --experimental-loader ts-node/esm --require tsconfig-paths/register",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/vision": "^5.1.0",
    "@google/generative-ai": "^0.24.1",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.3.2",
    "firebase-functions-test": "^3.4.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^149.0.0",
    "js-beautify": "^1.15.4",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf.js-extract": "^0.2.1",
    "pdf2pic": "^3.1.4",
    "pdfjs-dist": "^5.2.133",
    "pdfreader": "^3.0.7",
    "puppeteer": "^24.9.0",
    "sanitize-html": "^2.17.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/formidable": "^3.4.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/puppeteer": "^5.4.7",
    "@types/sanitize-html": "^2.16.0",
    "@types/tesseract.js": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^4.4.0",
    "eslint-plugin-import": "^2.31.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "private": true
}
